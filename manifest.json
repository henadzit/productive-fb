{
  "name": "Productive Facebook",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Make Facebook great again",
  "homepage_url": "http://none.com",
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "src/inject/inject.css",
        "src/inject/components/header.css",
        "src/inject/components/post.css",
        "src/inject/components/images.css",
        "src/inject/components/window.css"
      ]
    },
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "src/jquery-3.3.1.min.js",
        "src/inject/inject.js",
        "src/inject/components/header.js",
        "src/inject/components/images.js",
        "src/inject/components/window.js"
      ]
    }
  ]
}
